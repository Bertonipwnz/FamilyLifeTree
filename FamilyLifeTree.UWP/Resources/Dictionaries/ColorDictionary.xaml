<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!--  Словарь цветов.  -->

	<!--  Фоновый цвет диалога и лоадеров.  -->
	<SolidColorBrush
		x:Key="_backgroundDialogsBrush"
		Opacity="0.8"
		Color="Black" />

	<!--  Акцетный цвет текста.  -->
	<Color x:Key="_accentColorText">Black</Color>

	<!--  Цвет текста ошибки или предупреждения.  -->
	<Color x:Key="_warningColorText">Red</Color>
</ResourceDictionary>
