<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/Resources/Dictionaries/ColorDictionary.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<!--  Словарь стилей текстовых полей.  -->

	<!--  Стиль текста заголовков.  -->
	<Style x:Key="_headerTextBlockStyle" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource _accentColorText}" />
		<Setter Property="FontSize" Value="14" />
		<Setter Property="FontWeight" Value="Bold" />
	</Style>
</ResourceDictionary>
