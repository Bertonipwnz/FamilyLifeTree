<local:BasePage
	x:Class="FamilyLifeTree.UWP.Views.Pages.TreePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:FamilyLifeTree.UWP.Views.Pages"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:pageVM="using:FamilyLifeTree.ViewModels.Pages"
	x:Name="TreePageRoot"
	d:DataContext="{d:DesignInstance pageVM:TreePageViewModel}"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="AUTO" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Button
			Margin="12,8,0,8"
			HorizontalAlignment="Left"
			Command="{Binding AddPersonCommand}"
			Content="Добавить человека" />

		<ScrollViewer
			Grid.Row="1"
			HorizontalScrollBarVisibility="Hidden"
			MaxZoomFactor="10"
			MinZoomFactor="0.1"
			VerticalScrollBarVisibility="Hidden"
			ZoomMode="Enabled">
			<ItemsControl ItemsSource="{Binding Persons}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<Canvas  />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>

				<ItemsControl.ItemContainerStyle>
					<Style TargetType="ContentPresenter">
						<Setter Property="Canvas.Left" Value="{Binding CanvasLeft}" />
						<Setter Property="Canvas.Top" Value="{Binding CanvasTop}" />
					</Style>
				</ItemsControl.ItemContainerStyle>

				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border
							Width="120"
							Height="64"
							Padding="8"
							Background="LightSteelBlue"
							CornerRadius="8">
							<StackPanel>
								<TextBlock
									FontSize="16"
									FontWeight="SemiBold"
									Text="{Binding DisplayName}" />
								<Button
									Margin="0,8,0,0"
									HorizontalAlignment="Right"
									Command="{Binding DataContext.RemovePersonCommand, ElementName=TreePageRoot}"
									CommandParameter="{Binding}"
									Content="Удалить" />
							</StackPanel>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
	</Grid>
</local:BasePage>
